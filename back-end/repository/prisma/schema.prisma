generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Item {
    id             Int           @id @default(autoincrement())
    name           String        @unique
    description    String
    price          Float
    urgency        String           @default("Not a Priority")
    ShoppingList   ShoppingList? @relation(fields: [shoppingListId], references: [id])
    shoppingListId Int?
}

model Profile {
    id       Int    @id @default(autoincrement())
    email    String @unique
    name     String
    lastName String
    userId   Int
}

enum Privacy {
    public
    adultOnly
    private
}

model ShoppingList {
    id    Int    @id @default(autoincrement())
    name  String @unique
    items Item[]
    privacy Privacy @default(public)
    owner   String @default("GeneralUser")
}

model User {
    id       Int    @id @default(autoincrement())
    username String @unique
    password String
    role     String
}
