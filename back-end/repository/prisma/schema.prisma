generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Urgency {
    low
    mid
    high
}

model Item {
    id             Int           @id @default(autoincrement())
    name           String        @unique
    description    String
    price          Float
    urgency        Urgency       @default(low)
    ShoppingList   ShoppingList? @relation(fields: [shoppingListId], references: [id])
    shoppingListId Int?
}

model Profile {
    id       Int    @id @default(autoincrement())
    email    String @unique
    name     String
    lastName String
    userId   Int    @unique
}

enum Privacy {
    public
    adultOnly
    private
}

model ShoppingList {
    id      Int     @id @default(autoincrement())
    name    String  @unique
    items   Item[]
    privacy Privacy @default(public)
    owner   String  @default("GeneralUser")
}

enum Role {
    admin
    adult
    child
}

model User {
    id       Int    @id @default(autoincrement())
    username String @unique
    password String
    role     Role
}
